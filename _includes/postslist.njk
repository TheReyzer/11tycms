<ul class="list-group">

    {% for post in postslist %}
        <li class="list-group-item">
            <strong>
                <a href="{{ post.url | url }}">
                    {{ post.data.title }}
                </a>
            </strong>  
            -
            <span>
                {{ post.data.description }}
            </span>
        </li>
    {% endfor %}

</ul>