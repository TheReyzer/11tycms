<section class="row px-4 px-lg-2 justify-content-center">

    {% for post in postslist %}
        <div class="bg-light col-12 col-lg-4 w-100 w-lg-25 mx-lg-4 py-4 mb-3 border-0 rounded-2 d-flex flex-column shadow">
            <img width="100rem" class="img-fluid rounded-3 post-image-preview" src="{{ post.data.thumbnail | url }}" alt="{{ post.data.title }}"></img>
            <h5 class="text-dark mt-1 mb-0 fw-bold">{{ post.data.title }}</h5> 
            <small class="text-secondary mb-3">{{ post.data.description }}</small>
            <a type="button" class="btn btn-sm border-0 shadow-none btn-primary w-25 w-lg-50 fw-bold" href="{{ post.url | url }}">Read <small>ðŸ’¬</small></a>
        </div>
    {% endfor %}

</section>