---
layout: layouts/base.njk
pagination:
  data: collections
  size: 1
  reverse: true
  alias: tag
  
permalink: /tags/{{tag}}/
---

<h1>Tagged “{{ tag }}”</h1>

<ol>
{% set postslist = collections[ tag ] %}
{% for post in postslist %}
  <li><a href="{{ post.url }}">{{ post.data.title }}</a></li>
{% endfor %}
</ol>