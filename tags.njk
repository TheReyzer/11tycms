---
layout: layouts/base.njk
pagination:
    data: collections
    size: 1
    alias: tag
    addAllPagesToCollections: true
    filter:
        - posts
        - all
permalink: /tag/{{ tag | slugify }}/
eleventyComputed:
    title: Tagged {{ tag }}
    description: Lists post that are tagged with {{ tag }}
eleventyExcludeFromCollections: true
---
<ul>
{% for post in collections[tag] %}
    <li>
        <a href="{{ post.url }}">
            <h2>{{ post.data.title }}</h2>
        </a>
    </li>
{% endfor %}
</ul>