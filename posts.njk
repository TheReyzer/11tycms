---
layout: layouts/base.njk
pagination:
  data: collections.posts
  size: 1
  reverse: true
  alias: posts
  filter:
    - all
    - posts
# permalink: /posts/{{ posts }}
---

{% set postslist = collections.posts %}
<section class="row d-flex justify-content-center px-4">
        {% for post in collections.posts | reverse %}
            <div class="w-100 col-12 col-md-6 col-lg-4 w-lg-25 mx-lg-3 py-4 mb-3 border-0 rounded-2 d-flex flex-column">
                <a href="{{ post.url | url }}">
                    <img class="img-fluid rounded-3 w-100 post-image-preview" src="{{ post.data.thumbnail | url }}" alt="{{ post.data.title }}"></img>
                </a>
                <h5 class="text-dark mt-1 mb-0 fw-bold">{{ post.data.title }}</h5> 
                <small class="text-secondary mb-3 small">{{ post.data.description }}</small>
            </div>
        {% endfor %}
</section>

<nav>
  <ul class="pagination justify-content-center">
    <li class="mx-3">
        <a class="rounded-2 btn-light-green fw-bold shadow-none px-3 py-1 page-link" {% if pagination.href.previous %} href="{{ pagination.href.previous }}" {% endif %} aria-label="Previous">
          Prev
        </a>
    </li class=" mx-3">
        <a class="rounded-2 btn-light-green fw-bold shadow-none px-3 py-1 page-link" {% if pagination.href.next %} href="{{ pagination.href.next }}" {% endif %} aria-label="Next">
          Next
        </a>
    </li>
  </ul>
</nav>

{% include "tagslist.njk" %}
